{
	"defintions": {
		"intManipulation": {
			"type": "object",
			"properties": {
				"value": {
					"type": "integer",
					"minimum": 1,
					"maximum": 10
				},
				"operator": {
					"$ref": "arithOperatorSchema.json"
				},
				"property": {
					"$ref": "propertyIdSchema.json#/cardIntPropertyId"
				},
				"selector": {
					"$ref": "selectorSchema.json#/selector"
				}
			},
			"allOf": [
				{
					"if": {
						"properties": {
							"selector": {
								"$ref": "selectorSchema.json#/actionSelector"
							}
						}
					},
					"then": {
						"properties": {
							"property": {
								"$ref": "propertyIdSchema.json#/actionIntPropertyId"
							}
						}
					}
				},
				{
					"if": {
						"properties": {
							"selector": {
								"$ref": "selectorSchema.json#/entitySelector"
							}
						}
					},
					"then": {
						"properties": {
							"property": {							
								"$ref": "propertyIdSchema.json#/entityIntPropertyId"
							}
						}
					}
				},
				{
					"if": {
						"properties": {
							"selector": {
								"$ref": "selectorSchema.json#/locationSelector"
							}
						}
					},
					"then": {
						"properties": {
							"property": {					
								"$ref": "propertyIdSchema.json#/locationIntPropertyId"
							}
						}
					}
				}
			],
			"required": ["value","operator","property","selector"]
		},
		"stringManipulation": {
			"type": "object",
			"properties": {
				"value": {
					"type": "string"
				},
				"property": {
					"$ref": "propertyIdSchema.json#/cardStringPropertyId"
				}
			},
			"allOf": [
				{
					"if": {
						"properties": {
							"selector": {
								"$ref": "selectorSchema.json#/actionSelector"
							}
						}
					},
					"then": {
						"properties": {
							"property": {
								"$ref": "propertyIdSchema.json#/actionStringPropertyId"
							}
						}
					}
				},
				{
					"if": {
						"properties": {
							"selector": {
								"$ref": "selectorSchema.json#/entitySelector"							
							}
						}
					},
					"then": {
						"properties": {
							"property": {
								"$ref": "propertyIdSchema.json#/entityStringPropertyId"
							}
						}
					}
				},
				{
					"if": {
						"properties": {
							"selector": {
								"$ref": "selectorSchema.json#/locationSelector"
							}
						}
					},
					"then": {
						"properties": {
							"property": {								
								"$ref": "propertyIdSchema.json#/locationStringPropertyId"
							}
						}
					}
				}
			],
			"required": ["value","property","selector"]
		}
	},
	"type": "object",
	"oneOf": [
		{
			"$ref": "#/defintions/intManipulation"
		},
		{
			"$ref": "#/defintions/stringManipulation"
		}
	]
}